<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%=title %></p>
    <div style=" margin-left:80%;width:max-content;">

      <a href="/add" class="btn btn-primary" >add expense button</a></div>
      <div class="row">
      <% expensesList.forEach((expense,i) =>{ %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= expense.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">paid by: <%= expense.paidBy %></h6>
            <p class="card-text"><%= expense.description %></p>
            <p class="card-text"><%= expense.amount %></p>
            <a href="/edit/<%= expense._id %>" class="btn btn-success">update</a>
            <a href="/delete/<%= i %>" class="btn btn-danger">delete</a>
          </div>
        </div>
        <% }) %>
      </div></br>
      
    <div class="card" style="width: 18rem;"> 
      
   
    
    
    
  </body>
</html>
